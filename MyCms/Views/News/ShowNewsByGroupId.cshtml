@model IEnumerable<MyCms.DomainClasses.Page.Page>
@{
    ViewData["Title"] = "News Groups" + ViewData["GroupTitle"].ToString();
}

<!-- last news -->
<section class="last-news-section border-radius margin-top-60">
    <header><i class="icons icon-doc-2"></i>  <h3>Latest from Group @ViewData["GroupTitle"].ToString()</h3> </header>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <img class="border-radius" src="~/PageImages/@item.PageImageName">
                <h2> <a href="/News/@item.PageID">@item.PageTitle</a></h2>
                <p>
                    @item.PageShortDesc
                </p>
                <span class="date-publish"><i class="fa fa-calendar"></i> انتشار : @item.RecordDate </span>
                <a href="" class="more-link"><i class="icons icon-more"></i></a>
            </li>
        }

    </ul>
</section>
<!-- End last news -->
