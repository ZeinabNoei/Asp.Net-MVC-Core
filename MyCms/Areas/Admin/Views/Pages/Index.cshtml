@model IEnumerable<MyCms.DomainClasses.Page.Page>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create" class="btn btn-primary" >Create News</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PageImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PageGroup)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.PageVisit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
               <img src="~/PageImages/@item.PageImageName" class="thumbnail" style="max-width:120px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageGroup.GroupTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PageVisit)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PageID" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PageID" class="btn btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PageID" class="btn btn-danger" >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
